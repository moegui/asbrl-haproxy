global
	maxconn 100

defaults
	log global
	mode tcp
	retries 2
	timeout client 30m
	timeout connect 4s
	timeout server 30m
	timeout check 5s

listen stats
	mode http
	bind *:7000
	stats {{ STATS_ENABLE }}
	stats uri /

listen config_server
	bind *:{{ HA_PORT }}
	option httpchk
	{{ HA_HEALTH_CHECK }}
	default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
        {% for server in HA_SERVERS %}
            {{ server }}
        {% endfor %}